<!DOCTYPE html>
<html>
<head>
  <title>Mixtapes</title>
  <%= stylesheet_link_tag    "glvis", :media => "all" %>
  <%= javascript_include_tag "visualizer" %>
</head>
<body>
<div class="container">
  <div id="visualizer">
  <h2 id="playlist-title"><%= @title %></h2>
  </div>
  <script type="text/javascript">
    $(function(){
      var vis = new GLVis.FileInput([
        <% @songs.each do |song| %>
        {
          title: "<%= song.title %>",
          artist: "<%= song.artist %>",
          url: "<%= listen_mixtape_song_path(song.mixtape, song) %>",
        },
        <% end %>
      ], [
        {
          name: "Dots",
          id: "dots"
        },
        {
          name: "Particle cube",
          id: "eqPointCloud"
        },
        {
          name: "Circles",
          id: "circles"
        },
        {
          name: "Square squared",
          id: "squared"
        },
        {
          name: "Just bars",
          id: "simple"
        }
      ], '/shaders/');

      vis.render($("#visualizer"));
    });
  </script>
</div>
</body>
</html>
